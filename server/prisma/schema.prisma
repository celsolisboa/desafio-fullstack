// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String
  password String
}

model Room {
  id   String @id @default(cuid())
  name String
}

model Teacher {
  id   String @id @default(cuid())
  name String
}

model Course {
  id        String   @id @default(cuid())
  name      String
  room      String[]
  teacher   String[]
  startTime String
  endTime   String
  deleted   Boolean  @default(false)
}
